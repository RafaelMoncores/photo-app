<%= form_with(model: image) do |form| %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :picture, class: "form-label" %>
    <%= form.file_field :picture, class: "form-control" %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id if current_user %>

  <div class="mt-4">
    <%= form.submit class: "btn btn-primary" %>
  </div>

  <script type="text/javascript">
    $('#image_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB.');
      }
    });
  </script>
<% end %>
