<div class="container my-4">

  <h1 class="mb-3">Image Details</h1>

  <%= render @image %>

  <div class="mt-4">
    <div class="mb-2 col-2"> <%# Nova div para o botão "Edit" %>
      <%= link_to "Edit this image", edit_image_path(@image), class: "btn btn-warning d-block" %> <%# d-block para ocupar a largura total %>
    </div>

    <div class="mb-2 col-2"> <%# Nova div para o botão "Back" %>
      <%= link_to "Back to images", images_path, class: "btn btn-secondary d-block" %> <%# d-block para ocupar a largura total %>
    </div>

    <div class="mb-2"> <%# Nova div para o botão "Destroy" %>
      <%= button_to "Destroy this image", @image, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger d-block" %> <%# d-block para ocupar a largura total %>
    </div>
  </div>
</div>