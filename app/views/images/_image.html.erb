<div id="<%= dom_id image %>" class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><strong>Name:</strong> <%= image.name %></h5>
    <p class="card-text">
      <strong>Picture:</strong>
      <% if image.picture.present? %>
        <%= image_tag image.picture.url, class: "img-fluid rounded", style: "max-width: 250px; max-height: 150px; object-fit: contain;" %>
      <% else %>
        No picture uploaded.
      <% end %>
    </p>

    <p class="card-text">
      <strong>User:</strong>
      <%= image.user.email if image.user %>
    </p>

    <div class="mt-3">
      <% if local_assigns[:context] == :index %> <%# Ações específicas para a página index %>
        <%= link_to "Show this image", image, class: "btn btn-sm btn-info me-2" %>
        <%= link_to "Edit this image", edit_image_path(image), class: "btn btn-sm btn-warning" %>
      <% elsif local_assigns[:context] == :show %> <%# Ação específica para a página show %>
        <%= link_to "Edit this image", edit_image_path(image), class: "btn btn-warning me-2" %>
      <% end %>
    </div>
  </div>
</div>