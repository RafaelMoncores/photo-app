<div class="container my-4">

  <h1>Images</h1>

  <table class="table table-striped table-bordered mt-4"> <%# Adicionadas classes Bootstrap para tabela %>
    <thead class="table-dark"> <%# Cabeçalho da tabela escuro %>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Picture</th>
        <th>User</th>
        <th>Created At</th>
        <th colspan="3">Actions</th> <%# Colspan para os links de ação %>
      </tr>
    </thead>
    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.id %></td>
          <td><%= image.name %></td>
          <td>
            <% if image.picture.present? %>
              <%= image_tag image.picture.url, class: "img-thumbnail", style: "max-width: 100px; max-height: 100px;" %>
            <% else %>
              No picture
            <% end %>
          </td>
          <td><%= image.user.email if image.user %></td> <%# Exibe o email do usuário %>
          <td><%= image.created_at.strftime("%Y-%m-%d %H:%M") %></td> <%# Formata a data %>
          <td>
            <%= link_to "Show", image, class: "btn btn-sm btn-info me-1" %>
            <%= link_to "Edit", edit_image_path(image), class: "btn btn-sm btn-warning me-1" %>
            <%= button_to "Destroy", image, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to "New image", new_image_path, class: "btn btn-primary" %>
  </div>
</div>